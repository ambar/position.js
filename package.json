{
  "name": "position.js",
  "version": "0.3.0",
  "description": "Positions a popup element to an anchor element.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "license": "MIT",
  "repository": "ambar/position.js",
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "start": "cd examples && yarn && npm start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch --notify",
    "prebuild": "rm -rf es lib",
    "build": "rollup -c",
    "build:examples": "cd examples && PUBLIC_URL=/position.js/ npm run build",
    "deploy:examples": "gh-pages -o github -d ./examples/build",
    "prepublish": "npm run lint && npm test && npm run build",
    "lint": "eslint src"
  },
  "keywords": [
    "position",
    "dom",
    "placement",
    "alignment",
    "viewport",
    "popup",
    "popover",
    "tooltip",
    "overlay"
  ],
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.16.0",
    "gh-pages": "^2.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "rollup": "^1.0.2",
    "rollup-plugin-babel": "^4.2.0"
  }
}
